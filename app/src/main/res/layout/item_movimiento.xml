<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/movimiento_fondo"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloMovimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transferencia"
            android:textStyle="bold"
            android:textColor="#0F0D3E"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/subtituloMovimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del movimiento"
            android:textColor="#444"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/montoMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical" />
</LinearLayout>
